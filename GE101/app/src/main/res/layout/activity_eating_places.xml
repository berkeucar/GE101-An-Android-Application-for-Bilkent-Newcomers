<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".eatingPlaces.EatingPlaces"
    android:background="@drawable/bilkentbackground">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/eatingsTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#FFFFFF"
        app:tabTextColor="@android:color/white">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/mainCampusTabEatings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_campus_eatings"
            />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/eastCampusTabEatings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/east_campus_eatings" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/eatingsViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>