<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".busSchedule.BusScheduleTab"
    android:background="@drawable/bilkentbackground">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/busTab"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:tabTextColor="@android:color/white"
        app:tabBackground="@android:color/transparent"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Large">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainCampusTab"
            android:text="@string/main_campus_schedule"
            android:fontFamily="@font/cinzel_decorative_bold" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eastCampusTab"
            android:text="@string/east_campus_schedule"
            android:fontFamily="@font/cinzel_decorative_bold"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/busViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>

</LinearLayout>